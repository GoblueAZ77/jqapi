            %li.entry
              %ul.signatures
                %li.signature
                  %h2.title
                    Usage
                  
                  .row.clearfix
                    .third
                      %p Keyboard
                    .third
                      %p Navigation
                    .third
                      %p etc.

            %li.entry
              %ul.signatures
                %li.signature
                  %h2
                    Download
                  
                  .longdesc
                    %p
                      git clone, zip

            %li.entry
              %ul.signatures
                %li.signature
                  %h2
                    License
                  
                  .longdesc
                    %p
                      Same as jQuery

